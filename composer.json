{
    "name": "hexbatch/hexflow",
    "description": "Website for organizing the ideas, and code",
    "version": "0.6.1",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Will Woodlief",
            "email": "willwoodlief@hexbatch.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mysqli": "*",
        "ext-zip": "*",
        "ext-fileinfo": "*",
        "ext-luasandbox": "*",
        "slim/slim": "4.*",
        "slim/psr7": "1.*",
        "php-di/slim-bridge": "^3.1",
        "delight-im/auth": "^8.3",
        "lulco/phoenix": "^2.1",
        "symfony/yaml": "6.*",
        "slim/twig-view": "^3.0",
        "neitanod/forceutf8": "^2.0",
        "paragonie/easydb": "^3.0",
        "monolog/monolog": "^3.0",
        "jbbcode/jbbcode": "^1.4",
        "paquettg/php-html-parser": "^3.1",
        "ramsey/uuid": "^4.1",
        "paragonie/anti-csrf": "^2.3",
        "scrivo/highlight.php": "^9.18",
        "bluem/tree": "^3.1",
        "malkusch/lock": "^2.2",
        "nesbot/carbon": "^2.54",
        "cweagans/composer-patches": "^1.7",

    },
    "autoload": {
        "psr-4": {"app\\": "src/"}
    },
    "config": {
        "allow-plugins": {
            "cweagans/composer-patches": true
        },
        "preferred-install": "source"
    },
    "extra": {
        "patches": {
            "paquettg/php-html-parser": {
                "Fix deprecation notices for offsetGet() return type": "vendor-patches/paquettg/php-html-parser/3.1.1/fix_offsetget_deprecation.patch"
            },
            "jbbcode/jbbcode" : {
                    "Expose tree root" : "vendor-patches/jbbcode/jbbcode/3.1.1/expose-tree-root.patch",
                    "Jump Over Parser to ignore attribute" : "vendor-patches/jbbcode/jbbcode/3.1.1/jump-over-parser.patch"
            }
        },
        "composer-exit-on-patch-failure": true,
        "enable-patching": true
    }
}

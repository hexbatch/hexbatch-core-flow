<div class="container p-0 m-1 mb-2 mb-lg-0">

    <div class="card" style="width: fit-content">
        <ul class="list-group flex-lg-column flex-row  ">

            {% if project.get_current_user_permissions().can_edit %}
            <li class="list-group-item">
                <a class="btn btn-outline-primary border border-light"
                   href="{{ url_for('edit_project',{
                       user_name: project.get_admin_user().flow_user_name ,
                       project_name: project.flow_project_title
                   } )
                   }}">
                    Edit Description
                </a>
            </li>
            {% endif %}


            {% if project.get_current_user_permissions().can_admin %}
            <li class="list-group-item">
                <a class="btn btn-outline-primary border border-light"
                   href="{{ url_for('project_permissions',{
                       user_name: project.get_admin_user().flow_user_name ,
                       project_name: project.flow_project_title
                   } )
                   }}">
                    Permissions
                </a>
            </li>
            {% endif %}

            <li class="list-group-item">
                <a class="btn btn-outline-primary border border-light"
                   href="{{ url_for('project_tags',{
                       user_name: project.get_admin_user().flow_user_name ,
                       project_name: project.flow_project_title
                   } )
                   }}">
                    Tags
                </a>
            </li>
        </ul>
    </div>
</div>
<div class="container p-0 m-1">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-9 col-xxl-7">
            <div class="card" >

                <div class="card-header">
                    Permissions For {{ project.flow_project_title }}
                </div>

                <div class="card-body">
                    <h5 class="card-title">
                        Admin
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        The following users can change permissions and do general operations on the project
                    </h6>

                    <dl class="row">
                        <dt class="col-6 col-xxl-3">Administrators</dt>
                        <dd class="col-6 col-xxl-9">
                            <ul class="list-group">
                                {% for user in admin_users %}
                                    <li class="list-group-item d-flex justify-content-between align-items-start ">
                                        <div >
                                            {{ user.flow_user_name|e }}
                                        </div>
                                        <button class="btn btn-light text-light btn-sm bg-danger">
                                            <i class="fas fa-minus-circle"></i>
                                        </button>
                                    </li>
                                {% endfor %}

                                <li class="list-group-item d-flex justify-content-between align-items-start ">
                                    <button class="btn btn-light text-light  bg-secondary">
                                        <i class="fas fa-user-plus"></i> &nbsp; Add Admin
                                    </button>
                                </li>
                            </ul>
                        </dd>
                    </dl>
                </div> <!--/.card-body -->

                <div class="card-body">
                    <h5 class="card-title">
                        Editing
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        The following users can add, remove and edit content inside a project
                    </h6>

                    <dl class="row">
                        <dt class="col-6 col-xxl-3">Editors</dt>
                        <dd class="col-6 col-xxl-9">
                            <ul class="list-group">
                                {% for user in write_users %}
                                    <li class="list-group-item d-flex justify-content-between align-items-start ">
                                        <div >
                                            {{ user.flow_user_name|e }}
                                        </div>
                                        <button class="btn btn-light text-light btn-sm bg-danger">
                                            <i class="fas fa-minus-circle"></i>
                                        </button>
                                    </li>
                                {% endfor %}

                                <li class="list-group-item d-flex justify-content-between align-items-start ">
                                    <button class="btn btn-light text-light  bg-secondary">
                                        <i class="fas fa-user-plus"></i> &nbsp; Add Editor
                                    </button>
                                </li>
                            </ul>
                        </dd>
                    </dl>
                </div> <!--/.card-body -->

                <div class="card-body">
                    <h5 class="card-title">
                        Reading
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        The following users can read about the project and see the content
                    </h6>

                    <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" {{ project.is_public ? 'checked' : '' }}>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            Project is public
                        </label>
                    </div>


                    <div class="{{ project.is_public ? 'flow-disabled' : ''}}" >
                        <dl class="row">
                            <dt class="col-6 col-xxl-3">
                                Readers
                            </dt>
                            <dd class="col-6 col-xxl-9">
                                <ul class="list-group">
                                    {% for user in read_users %}
                                        <li class="list-group-item d-flex justify-content-between align-items-start ">
                                            <div >
                                                {{ user.flow_user_name|e }}
                                            </div>
                                            <button class="btn btn-light text-light btn-sm bg-danger">
                                                <i class="fas fa-minus-circle"></i>
                                            </button>
                                        </li>
                                    {% endfor %}

                                    <li class="list-group-item d-flex justify-content-between align-items-start ">
                                        <button class="btn btn-light text-light  bg-secondary">
                                            <i class="fas fa-user-plus"></i> &nbsp; Add Reader
                                        </button>
                                    </li>
                                </ul>
                            </dd>
                        </dl>
                    </div>


                </div> <!--/.card-body -->
            </div> <!-- /.card -->
        </div> <!-- /.col -->
    </div> <!-- /.row -->
</div>
{% if applied.getXProjectGuid() %}
    {% if project.get_project_guid() == applied.getXProjectGuid() %}
        <i class="bi bi-box flow-tag-applied-of-this " ></i>
        {{ applied.getZTaggedTitle() }}
    {% else %}
        <i class="bi bi-box"></i>
        {{ applied.getZTaggedTitle() }}
    {% endif %}

{% elseif applied.getXUserGuid() %}

    {% if user.getFlowUserGuid() == applied.getXUserGuid() %}
        <i class="bi-person-circle flow-tag-applied-of-this " ></i>
        {{ applied.getZTaggedTitle() }}
    {% else %}
        <i class="bi-person-circle"></i>
        {{ applied.getZTaggedTitle() }}
    {% endif %}

{% elseif applied.getXNodeGuid() %}
    <i class="bi bi-type"></i>
    {{ applied.getZTaggedTitle() }}

{% elseif applied.getXPointerGuid() %}
    <i class="bi bi-hand-index-thumb"></i>
    {{ applied.getZTaggedTitle() }}

{% elseif applied.getXEntryGuid() %}
    <i class="bi bi-columns"></i>
    {{ applied.getZTaggedTitle() }}

{% endif %}
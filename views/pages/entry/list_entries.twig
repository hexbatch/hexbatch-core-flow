{{ include('project/partials/project-breadcrumbs.twig') }}

<div class="container container-sm container-md container-lg container-xl container-xxl">
    <div class="card col-12">
        <div class="card-header">
            <h4>
                Entries

                {% if project.get_current_user_permissions().can_edit %}
                <a
                    href="{{ url_for('new_entry',{
                        user_name: project.get_admin_user().flow_user_name ,
                        project_name: project.get_project_title()
                    } )
                    }}"
                    class="btn btn-lg btn-success float-end"
                >
                    <i class="bi bi-plus-circle pe-1"></i>
                    New Entry
                </a>
                {% endif %}
            </h4>
        </div> <!-- /.card-header -->
        <div class="card-body">
            <ul class="list-group">
                {% for entry in entries %}
                    {% include 'entry/partials/entry-list-line.twig' with {'entry': entry} %}
                {% endfor %}
            </ul>

        </div>
    </div> <!-- /.card -->
</div> <!-- .container -->

<script src="{{ root_url }}/public/resources/js/entry/edit-entry.js"></script>

<script>
    jQuery(function() {
        refresh_auto_formatted_times();
    });
</script>

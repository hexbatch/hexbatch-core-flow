<header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ url_for('root') }}">
                Hexbatch-Flow
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">


                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ url_for('all_projects') }}">
                            {{  user.flow_user_id ? 'My Projects' : 'Public Projects' }}
                        </a>
                    </li>

                    <li class="nav-item ms-lg-4">
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </li>
                </ul>





                <div class="d-flex">

                    {% if user.flow_user_id %}
                        <a class="btn btn-outline-primary border border-light" role="button" href="{{ url_for('user_home') }}">
                            Profile
                        </a>
                    {% endif %}


                    {% if user.flow_user_id %}
                        <a  class="btn btn-outline-primary border border-light" role="button" href="{{ url_for('logout') }}">
                            Logout {{ user.flow_user_name }}
                        </a>
                    {% else %}
                        <a  class="btn btn-outline-primary border border-light" role="button" href="{{ url_for('login') }}">
                            Login or Register
                        </a>
                    {% endif %}

                </div>
            </div>
        </div>
    </nav>

</header>


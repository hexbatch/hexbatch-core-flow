<header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ url_for('root') }}">Root</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        {% if user.id %}
                            <a class="nav-link active" aria-current="page" href="{{ url_for('user_home') }}">Home</a>
                        {% endif %}
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ url_for('all_projects') }}">Projects</a>
                    </li>

                    {% if user.id %}
                        <li class="nav-item">
                            <a  class="btn btn-outline-primary border border-light" role="button" href="{{ url_for('logout') }}">
                                Logout {{ user.flow_user_name }}
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a  class="btn btn-outline-primary border border-light" role="button" href="{{ url_for('login') }}">
                                Login or Register
                            </a>
                        </li>
                    {% endif %}
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

</header>

